{{#if addNewCategory}}
<h1>New Category</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="type">Type</label>
          {{input value=type id="type"}}
        </div>

        <button {{action 'save'}}>Save</button>
      </form>
    </div>
{{else}}
<button class="btn btn-success btn-xl"{{action 'categoryFormShow'}}>New Category</button>
{{/if}}
