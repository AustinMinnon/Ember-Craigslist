{{#if addNewListing}}
<h1>New Listing</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="title">title</label>
          {{input value=title id="title"}}
        </div>

        <div class="form-group">
          <label for="body">body</label>
          {{#bs-textarea value=body id="body"}}{{/bs-textarea}}
        </div>

        <div class="form-group">
          <label for="user">user</label>
          {{input value=user id="user"}}
        </div>

        <div class="form-group">
          <label for="email">email</label>
          {{input value=email id="email"}}
        </div>

        <div class="form-group">
          <label for="date">date</label>
          {{input type="date" value=date id="date"}}
        </div>

        <button {{action 'save'}}>Save</button>
      </form>
    </div>
{{else}}
<button {{action 'listingFormShow'}}>New Listing</button>
{{/if}}
